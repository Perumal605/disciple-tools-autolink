{
    "name": "cz/dt-plugin",
    "description": "A modern disciple.tools plugin starter template.",
    "type": "project",
    "license": "GNU",
    "autoload": {
        "psr-4": {
            "CZ\\Plugin\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "authors": [
        {
            "name": "Craig Wann",
            "email": "craig@codezone.io"
        }
    ],
    "require-dev": {
        "wpify/scoper": "^3.0"
    },
    "extra": {
        "wpify-scoper": {
            "prefix": "CZ",
            "folder": "vendor-scoped",
            "globals": [
                "wordpress"
            ],
            "composerjson": "composer.scoped.json",
            "composerlock": "composer.scoped.lock",
            "autorun": true
        },
        "acorn": {
            "providers": [
                "CZ\\Providers\\PluginServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Roots\\Acorn\\ComposerScripts::postAutoloadDump"
        ]
    },
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true,
            "wpify/scoper": true
        }
    }
}
